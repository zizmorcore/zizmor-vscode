{
  "name": "zizmor-vscode",
  "displayName": "zizmor",
  "description": "A Visual Studio Code extension for zizmor",
  "repository": {
    "type": "git",
    "url": "https://github.com/zizmorcore/zizmor-vscode"
  },
  "homepage": "https://github.com/zizmorcore/zizmor-vscode",
  "bugs": {
    "url": "https://github.com/zizmorcore/zizmor-vscode/issues/new"
  },
  "icon": "assets/icon.png",
  "version": "0.0.8",
  "publisher": "zizmor",
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0",
    "bun": "^1.3.1"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "keywords": [
    "zizmor",
    "security",
    "github-actions",
    "yaml",
    "linting"
  ],
  "activationEvents": [
    "onLanguage:yaml",
    "onLanguage:github-actions-workflow"
  ],
  "qna": "https://github.com/orgs/zizmorcore/discussions",
  "sponsor": {
    "url": "https://github.com/sponsors/woodruffw"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zizmor.restart",
        "title": "Restart zizmor Language Server",
        "category": "zizmor"
      },
      {
        "command": "zizmor.showOutputChannel",
        "title": "Show zizmor Output",
        "category": "zizmor"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "zizmor",
      "properties": {
        "zizmor.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable zizmor language server"
        },
        "zizmor.executablePath": {
          "type": "string",
          "default": "zizmor",
          "description": "Path to the zizmor executable",
          "scope": "machine-overridable"
        },
        "zizmor.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run package",
    "compile": "bun build ./src/extension.ts --minify --outdir ./dist --target=node --format=cjs --external=vscode --sourcemap=linked",
    "watch": "bun build ./src/extension.ts --minify --outdir ./dist --target=node --format=cjs --external=vscode --sourcemap=inline --watch",
    "package": "bun run compile",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "bun run compile-tests && bun run compile && bun run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vsce:package": "vsce package",
    "vsce:publish": "vsce publish"
  },
  "devDependencies": {
    "@types/bun": "1.3.x",
    "@types/vscode": "1.108.1",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "vscode-languageclient": "^8.1.0"
  }
}
